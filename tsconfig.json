{
	"compilerOptions": {
		"allowJs": true,
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"types": ["node", "bun"],
		"target": "ESNext",
		"strict": true,
		"noEmit": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"skipLibCheck": true
	},
	"include": ["**/*.ts", "eslint.d.ts"],
	"exclude": ["node_modules", "**/node_modules/*"]
}
